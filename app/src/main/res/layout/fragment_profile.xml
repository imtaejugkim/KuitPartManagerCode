<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_profile_entire"
    tools:context=".search.SearchFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_plofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="1dp">

            <TextView
                    android:id="@+id/tv_edit_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kuit.official"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                    android:id="@+id/iv_thread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_threads"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="104dp"/>

            <ImageView
                    android:id="@+id/iv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_create"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_thread"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"/>

            <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_create"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siv_profile_edit"
                    android:layout_width="79dp"
                    android:layout_height="79dp"
                    android:padding="1dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="73dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

                <ImageView
                        android:id="@+id/iv_home_profile_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_gray"
                        app:layout_constraintBottom_toBottomOf="@id/siv_profile_edit"
                        app:layout_constraintEnd_toEndOf="@id/siv_profile_edit"
                        app:layout_constraintStart_toStartOf="@id/siv_profile_edit"
                        app:layout_constraintTop_toTopOf="@id/siv_profile_edit"/>


            <TextView
                    android:id="@+id/tv_post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/tv_follower_count"
                    app:layout_constraintEnd_toStartOf="@id/tv_follower_count"
                    android:layout_marginEnd="57sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시물"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_post_count"
                    app:layout_constraintStart_toStartOf="@id/tv_post_count"
                    app:layout_constraintEnd_toEndOf="@id/tv_post_count"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/tv_follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="14sp"
                    android:layout_marginTop="91dp"
                    android:layout_marginStart="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_following_count"
                    android:layout_marginEnd="57sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/tv_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로워"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_follower_count"
                    app:layout_constraintStart_toStartOf="@id/tv_follower_count"
                    app:layout_constraintEnd_toEndOf="@id/tv_follower_count"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/tv_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="14sp"
                    android:layout_marginTop="91dp"
                    android:layout_marginEnd="40sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/tv_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로잉"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_following_count"
                    app:layout_constraintStart_toStartOf="@id/tv_following_count"
                    app:layout_constraintEnd_toEndOf="@id/tv_following_count"

                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쿠잇"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf = "@id/siv_profile_edit"/>

            <ImageView
                    android:id="@+id/iv_profile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_button"
                    app:layout_constraintTop_toBottomOf="@id/siv_profile_edit"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="37dp"
                    android:layout_marginStart="13dp"/>

            <FrameLayout
                    android:id="@+id/fl_profile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/iv_profile_edit"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_edit"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_edit"
                    app:layout_constraintTop_toTopOf="@id/iv_profile_edit">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프로필 편집"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

            </FrameLayout>

            <ImageView
                    android:id="@+id/iv_profile_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_button"
                    app:layout_constraintTop_toBottomOf="@id/siv_profile_edit"
                    app:layout_constraintStart_toEndOf="@id/iv_profile_edit"
                    android:layout_marginTop="37dp"
                    android:layout_marginStart="4dp"/>

            <FrameLayout
                    android:id="@+id/fl_profile_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/iv_profile_share"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_share"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_share"
                    app:layout_constraintTop_toTopOf="@id/iv_profile_share">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프로필 공유"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

            </FrameLayout>

            <ImageView
                    android:id="@+id/iv_add_friend_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_square"
                    app:layout_constraintTop_toTopOf="@id/iv_profile_share"
                    app:layout_constraintBottom_toBottomOf="@id/iv_profile_share"
                    app:layout_constraintStart_toEndOf="@id/iv_profile_share"
                    android:layout_marginStart="3dp"/>

            <FrameLayout
                    android:id="@+id/fl_add_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/iv_add_friend_square"
                    app:layout_constraintEnd_toEndOf="@id/iv_add_friend_square"
                    app:layout_constraintStart_toStartOf="@id/iv_add_friend_square"
                    app:layout_constraintTop_toTopOf="@id/iv_add_friend_square">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_friend"/>

            </FrameLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스토리 하이라이트"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/iv_profile_edit"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="13dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋아하는 스토리를 프로필에 보관해보세요"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/iv_profile_edit"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="34dp"
                    android:layout_marginStart="13dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siv_story_highlight"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="1dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="63dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_profile_edit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/siv_story_highlight"
                    app:layout_constraintEnd_toEndOf="@+id/siv_story_highlight"
                    app:layout_constraintStart_toStartOf="@+id/siv_story_highlight"
                    app:layout_constraintTop_toTopOf="@+id/siv_story_highlight"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/story_highlight_plussvg"
                    app:layout_constraintBottom_toBottomOf="@+id/siv_story_highlight"
                    app:layout_constraintEnd_toEndOf="@+id/siv_story_highlight"
                    app:layout_constraintStart_toStartOf="@+id/siv_story_highlight"
                    app:layout_constraintTop_toTopOf="@+id/siv_story_highlight"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새로 만들기"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/siv_story_highlight"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="16dp"/>

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/siv_story_highlight"
                    app:tabIndicatorAnimationMode="linear"
                    app:tabIndicatorColor="@color/black"
                    app:tabIndicatorFullWidth="true"
                    app:tabRippleColor="#BDBDBD"
                    app:tabIconTint="@color/black"
                    android:layout_marginTop="28dp"/>

            <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/tl_profile"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>