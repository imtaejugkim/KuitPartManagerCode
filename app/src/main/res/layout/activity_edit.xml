<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".search.SearchFragment">
    <TextView
            android:id="@+id/tv_edit_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/tv_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보 수정"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/tv_edit_done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

    <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_title"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#DBDBDB"
            android:layout_marginTop="16dp"/>

    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_edit_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img_sample2"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="14dp"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

    <TextView
            android:id="@+id/tv_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id값이 들어가는 자리입니다."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/siv_edit_profile"
            app:layout_constraintStart_toEndOf="@id/siv_edit_profile"
            android:layout_marginStart="14dp"/>

    <TextView
            android:id="@+id/tv_edit_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 추가..."
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/tv_edit_name"
            app:layout_constraintBottom_toBottomOf="@id/siv_edit_profile"/>

    <ImageView
            android:id="@+id/iv_edit_post_img"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:src="@drawable/img_sample2"
            app:layout_constraintTop_toBottomOf="@id/siv_edit_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/tv_edit_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content가 들어갈 자리입니다."
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/iv_edit_post_img"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>